<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/xFollowingRowImageView"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/image_placeholder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/xFollowingRowFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:text="Name.."
                app:layout_constraintStart_toEndOf="@+id/xFollowingRowImageView"
                app:layout_constraintTop_toTopOf="@+id/xFollowingRowImageView" />

            <TextView
                android:id="@+id/xFollowingRowUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:text="Username"
                app:layout_constraintStart_toEndOf="@+id/xFollowingRowImageView"
                app:layout_constraintTop_toBottomOf="@+id/xFollowingRowFullName" />

            <TextView
                android:id="@+id/xFollowingRowBio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:lines="2"
                android:maxLines="2"
                android:text="TextView"
                android:textSize="13sp"
                app:layout_constraintEnd_toStartOf="@+id/xFollowingRowButton"
                app:layout_constraintStart_toEndOf="@+id/xFollowingRowImageView"
                app:layout_constraintTop_toBottomOf="@+id/xFollowingRowUsername" />

            <ToggleButton
                android:id="@+id/xFollowingRowButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="Follow"
                android:textAllCaps="false"
                android:textOff="Follow"
                android:textOn="Following"
                app:layout_constraintBottom_toBottomOf="@+id/xFollowingRowImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/xFollowingRowImageView" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>